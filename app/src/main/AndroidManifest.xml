<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jellepc.marioenco" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.jellepc.marioenco.SplashScreen"
            android:configChanges="orientation"
            android:label="@string/title_activity_info_scherm"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.jellepc.marioenco.UserIP"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.jellepc.marioenco.InformatieFragment"
            android:configChanges="orientation"
            android:label="@string/title_activity_info_scherm"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.jellepc.marioenco.MainActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_home_fragment"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.jellepc.marioenco.ServiceBestellen"
            android:label="@string/title_activity_service_bestellen" >
        </activity>
    </application>

</manifest>
