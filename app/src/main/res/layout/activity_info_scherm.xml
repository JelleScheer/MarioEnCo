<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jellepc.marioenco.InfoScherm">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/infoServiceNaam"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/infoVeld"
        android:layout_below="@+id/infoServiceNaam"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/infoVeld"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="58dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bestel"
            android:id="@+id/bestelBevestigen"
            android:layout_toEndOf="@+id/infoServiceNaam"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Annuleer"
            android:id="@+id/annuleerKnop"
            android:layout_toStartOf="@+id/infoVeld"
            android:layout_alignTop="@+id/bestelBevestigen"
            android:layout_gravity="center_vertical" />
    </GridLayout>

</RelativeLayout>
