<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView2"
        android:src="@drawable/mariotrans" />

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/infoServiceNaam"
        android:layout_marginTop="58dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/infoVeld"
        android:layout_below="@+id/infoServiceNaam"
        android:layout_centerHorizontal="true"
        android:layout_weight=".70"
        android:layout_marginTop="60dp"
        android:textColor="#ff000000" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="190dp"
        android:layout_below="@+id/infoVeld"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="82dp"
        android:layout_marginStart="82dp"
        android:paddingLeft="20dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bestel"
            android:id="@+id/bestelBevestigen"
            android:layout_toEndOf="@+id/infoServiceNaam"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Annuleer"
            android:id="@+id/annuleerKnop"
            android:layout_toStartOf="@+id/infoVeld"
            android:layout_alignTop="@+id/bestelBevestigen"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal" />
    </GridLayout>

</RelativeLayout>